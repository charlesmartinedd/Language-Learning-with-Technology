---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Contact - Language Learning with Technology"
  description="Get in touch with Dr. Charles Martin for questions about the book, course, or language learning strategies."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 to-white py-16 md:py-20">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center space-y-6">
          <h1 class="text-gray-900">Get in Touch</h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Have questions about the book, course, or language learning strategies?
            I'd love to hear from you.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
            <!-- Contact Form -->
            <div class="lg:col-span-3">
              <div class="bg-white border-2 border-gray-100 rounded-2xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Send a Message</h2>

                <form class="space-y-6" action="#" method="POST">
                  <div>
                    <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                      Your Name <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                      placeholder="John Doe"
                    />
                  </div>

                  <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                      Email Address <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                      placeholder="john@example.com"
                    />
                  </div>

                  <div>
                    <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
                      Subject <span class="text-red-500">*</span>
                    </label>
                    <select
                      id="subject"
                      name="subject"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    >
                      <option value="">Select a topic</option>
                      <option value="book">Book Inquiry</option>
                      <option value="course">Course Information</option>
                      <option value="consultation">Personal Consultation</option>
                      <option value="speaking">Speaking Engagement</option>
                      <option value="other">Other</option>
                    </select>
                  </div>

                  <div>
                    <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                      Message <span class="text-red-500">*</span>
                    </label>
                    <textarea
                      id="message"
                      name="message"
                      rows="6"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
                      placeholder="Tell me about your question or how I can help..."
                    ></textarea>
                  </div>

                  <div class="flex items-start space-x-3">
                    <input
                      type="checkbox"
                      id="newsletter"
                      name="newsletter"
                      class="mt-1 w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                    />
                    <label for="newsletter" class="text-sm text-gray-600">
                      I'd like to receive updates about new resources, courses, and language learning tips.
                    </label>
                  </div>

                  <button type="submit" class="btn-primary w-full">
                    Send Message
                  </button>

                  <p class="text-xs text-gray-500 text-center">
                    By submitting this form, you agree to our privacy policy.
                    We respect your privacy and will never share your information.
                  </p>
                </form>
              </div>
            </div>

            <!-- Contact Info -->
            <div class="lg:col-span-2 space-y-6">
              <!-- Email -->
              <div class="bg-gradient-to-br from-primary-50 to-accent-50 rounded-2xl p-6 border-l-4 border-primary-600">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                    <a
                      href="mailto:drcharlesmartinjr@alexandriasdesign.com"
                      class="text-sm text-primary-600 hover:text-primary-700 break-all"
                    >
                      drcharlesmartinjr@alexandriasdesign.com
                    </a>
                  </div>
                </div>
              </div>

              <!-- Response Time -->
              <div class="bg-white border-2 border-gray-100 rounded-2xl p-6">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-accent-600 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1">Response Time</h3>
                    <p class="text-sm text-gray-600">
                      I typically respond within 24-48 hours during business days.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Areas of Help -->
              <div class="bg-white border-2 border-gray-100 rounded-2xl p-6">
                <h3 class="font-semibold text-gray-900 mb-4">I Can Help With:</h3>
                <ul class="space-y-3">
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-gray-700">Book and course inquiries</span>
                  </li>
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-gray-700">Technology selection guidance</span>
                  </li>
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-gray-700">Personal consultations</span>
                  </li>
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-gray-700">Speaking engagements</span>
                  </li>
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-gray-700">Media and press inquiries</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-center text-gray-900 mb-12">Frequently Asked Questions</h2>

          <div class="space-y-6">
            <div class="bg-white rounded-xl p-6 shadow-md">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                How can I purchase the book?
              </h3>
              <p class="text-gray-600">
                The book is currently being finalized for publication. Contact me directly
                to express interest and be notified when it becomes available.
              </p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                When will the online course be available?
              </h3>
              <p class="text-gray-600">
                The course is in active development. Join the waitlist on the Course page
                to be notified when enrollment opens and receive early-bird pricing.
              </p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Do you offer personal consultations?
              </h3>
              <p class="text-gray-600">
                Yes! I offer one-on-one consultations for parents seeking personalized
                guidance. Contact me with details about your needs and I'll provide
                information about availability and pricing.
              </p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Are you available for speaking engagements?
              </h3>
              <p class="text-gray-600">
                Absolutely! I speak at educational conferences, parent workshops, and
                professional development events. Reach out with details about your
                event and I'll respond promptly.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Basic form handling (you can integrate with actual email service)
  const form = document.querySelector('form');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);

    // Here you would integrate with your email service (e.g., EmailJS, Formspree, etc.)
    console.log('Form submitted:', data);

    alert('Thank you for your message! I will respond within 24-48 hours.');
    (form as HTMLFormElement).reset();
  });
</script>
