---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const benefits = [
  {
    title: 'Evidence-Based Strategies',
    description: 'Learn proven techniques backed by research in language acquisition and educational technology.',
    icon: 'üìö',
  },
  {
    title: 'Practical Guidance',
    description: 'Get actionable advice on selecting and using technology tools that truly support language learning.',
    icon: 'üéØ',
  },
  {
    title: 'Parent-Friendly Approach',
    description: 'Navigate the digital landscape confidently with clear explanations designed for non-technical parents.',
    icon: 'üë®‚Äçüë©‚Äçüëß‚Äçüë¶',
  },
];
---

<BaseLayout
  title="Language Learning with Technology - Expert Guide for Parents"
  description="Discover how to use technology effectively to support your child's language learning journey. Expert guidance from Dr. Charles Martin."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary-50 via-white to-accent-50 section-padding">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center space-y-8">
          <h1 class="text-gray-900 leading-tight">
            Empower Your Child's<br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-accent-600">
              Language Learning Journey
            </span>
          </h1>

          <p class="text-xl md:text-2xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
            Discover how to use technology effectively to support your child's language development.
            Expert guidance for parents navigating the digital learning landscape.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
            <a href="#book" class="btn-primary w-full sm:w-auto">
              Get the Book
            </a>
            <a href="/course" class="btn-secondary w-full sm:w-auto">
              Explore the Course
            </a>
          </div>
        </div>
      </div>

      <!-- Decorative elements -->
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-accent-200 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-gray-900 mb-4">Why This Matters</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Technology can be a powerful tool for language learning when used thoughtfully and strategically.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
          {benefits.map((benefit) => (
            <div class="group bg-white border-2 border-gray-100 rounded-2xl p-8 hover:border-primary-200 hover:shadow-xl transition-all duration-300">
              <div class="text-5xl mb-4 transform group-hover:scale-110 transition-transform">
                {benefit.icon}
              </div>
              <h3 class="text-gray-900 mb-3">{benefit.title}</h3>
              <p class="text-gray-600 leading-relaxed">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Book CTA Section -->
    <section id="book" class="section-padding bg-gradient-to-br from-primary-600 to-primary-800 text-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center space-y-8">
          <h2 class="text-white">Get the Complete Guide</h2>
          <p class="text-xl text-primary-100 leading-relaxed">
            "Language Learning with Technology" provides a comprehensive roadmap for parents
            who want to make informed decisions about using technology to support their child's
            language development.
          </p>

          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 md:p-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left mb-8">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent-300 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-primary-50">Research-backed strategies</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent-300 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-primary-50">Practical implementation guides</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent-300 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-primary-50">Tool selection criteria</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent-300 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-primary-50">Age-appropriate recommendations</span>
              </div>
            </div>

            <a href="/contact" class="btn bg-white text-primary-600 hover:bg-primary-50">
              Request Your Copy
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Course Preview Section -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-6">
            <h2 class="text-gray-900">Interactive Course</h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              Complement the book with our interactive online course. Get personalized guidance,
              downloadable resources, and join a community of parents supporting their children's
              language learning journey.
            </p>
            <ul class="space-y-4">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-700">Video lessons and demonstrations</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-700">Downloadable worksheets and checklists</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-700">Community forum and expert support</span>
              </li>
            </ul>
            <a href="/course" class="btn-primary inline-flex">
              Explore the Course
            </a>
          </div>

          <div class="relative">
            <div class="aspect-video bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl shadow-2xl flex items-center justify-center">
              <div class="text-center space-y-4">
                <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto shadow-lg">
                  <svg class="w-10 h-10 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z" />
                  </svg>
                </div>
                <p class="text-primary-700 font-medium">Course Preview Coming Soon</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="bg-gradient-to-r from-primary-600 to-accent-600 rounded-3xl shadow-2xl overflow-hidden">
          <div class="px-8 py-12 md:px-16 md:py-20 text-center space-y-6">
            <h2 class="text-white">Ready to Get Started?</h2>
            <p class="text-xl text-primary-50 max-w-2xl mx-auto">
              Join parents who are confidently using technology to support their children's language learning.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
              <a href="/guide" class="btn bg-white text-primary-600 hover:bg-primary-50">
                Read the Guide
              </a>
              <a href="/contact" class="btn bg-primary-700 text-white hover:bg-primary-800">
                Get in Touch
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
