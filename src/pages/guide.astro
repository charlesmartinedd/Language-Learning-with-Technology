import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const sections = [
  {
    title: 'Getting Started',
    icon: 'ðŸš€',
    topics: [
      'Understanding your child\'s learning style',
      'Setting realistic language learning goals',
      'Creating a supportive digital environment',
      'Establishing healthy screen time boundaries',
    ],
  },
  {
    title: 'Technology Selection',
    icon: 'ðŸŽ¯',
    topics: [
      'Evaluating language learning apps and platforms',
      'Age-appropriate tool recommendations',
      'Balancing free and paid resources',
      'Quality indicators for educational content',
    ],
  },
  {
    title: 'Implementation Strategies',
    icon: 'ðŸ“±',
    topics: [
      'Integrating technology with traditional methods',
      'Creating effective learning routines',
      'Tracking progress and adjusting approaches',
      'Supporting motivation and engagement',
    ],
  },
  {
    title: 'Best Practices',
    icon: 'âœ¨',
    topics: [
      'Interactive vs. passive screen time',
      'Parent involvement and co-viewing',
      'Building digital literacy skills',
      'Addressing common challenges',
    ],
  },
];
---

<BaseLayout
  title="Parent's Guide - Language Learning with Technology"
  description="Comprehensive guide for parents on using technology effectively to support children's language learning."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 to-white py-16 md:py-20">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center space-y-6">
          <h1 class="text-gray-900">Parent's Guide</h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            A comprehensive roadmap for supporting your child's language learning journey with technology
          </p>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto prose prose-lg">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why This Guide Matters</h2>
          <p class="text-gray-600 leading-relaxed mb-4">
            Technology has become an integral part of modern education, but knowing how to use it
            effectively for language learning can be overwhelming. This guide provides you with
            evidence-based strategies and practical tips to make the most of digital tools while
            avoiding common pitfalls.
          </p>
          <p class="text-gray-600 leading-relaxed">
            Whether you're just starting to explore language learning apps or looking to optimize
            your current approach, this guide will help you make informed decisions that align
            with your child's needs and learning style.
          </p>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="max-w-5xl mx-auto space-y-12">
          {sections.map((section, index) => (
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
              <div class="bg-gradient-to-r from-primary-600 to-accent-600 px-8 py-6">
                <div class="flex items-center space-x-4">
                  <span class="text-4xl">{section.icon}</span>
                  <h2 class="text-2xl md:text-3xl font-bold text-white">{section.title}</h2>
                </div>
              </div>

              <div class="p-8">
                <ul class="space-y-4">
                  {section.topics.map((topic) => (
                    <li class="flex items-start space-x-4">
                      <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-gray-700 text-lg leading-relaxed">{topic}</span>
                    </li>
                  ))}
                </ul>

                {index === 0 && (
                  <div class="mt-8 p-6 bg-primary-50 rounded-xl border-l-4 border-primary-600">
                    <h4 class="font-semibold text-gray-900 mb-3">Key Takeaway</h4>
                    <p class="text-gray-700 leading-relaxed">
                      Every child is unique. The most effective language learning approach combines
                      technology with human interaction, tailored to your child's individual needs
                      and interests.
                    </p>
                  </div>
                )}

                {index === 1 && (
                  <div class="mt-8 p-6 bg-accent-50 rounded-xl border-l-4 border-accent-600">
                    <h4 class="font-semibold text-gray-900 mb-3">Pro Tip</h4>
                    <p class="text-gray-700 leading-relaxed">
                      Look for apps that offer progress tracking, adaptive difficulty, and opportunities
                      for both input (listening/reading) and output (speaking/writing) practice.
                    </p>
                  </div>
                )}

                {index === 2 && (
                  <div class="mt-8 p-6 bg-primary-50 rounded-xl border-l-4 border-primary-600">
                    <h4 class="font-semibold text-gray-900 mb-3">Remember</h4>
                    <p class="text-gray-700 leading-relaxed">
                      Consistency is more important than duration. Short, regular sessions (15-20 minutes)
                      are often more effective than longer, infrequent ones.
                    </p>
                  </div>
                )}

                {index === 3 && (
                  <div class="mt-8 p-6 bg-accent-50 rounded-xl border-l-4 border-accent-600">
                    <h4 class="font-semibold text-gray-900 mb-3">Important</h4>
                    <p class="text-gray-700 leading-relaxed">
                      Your involvement makes a significant difference. Co-viewing, discussing content,
                      and practicing together enhances learning outcomes far beyond solo app use.
                    </p>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Resources Callout -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="bg-gradient-to-r from-primary-600 to-accent-600 rounded-3xl shadow-2xl overflow-hidden">
          <div class="px-8 py-12 md:px-16 md:py-16 text-center space-y-6">
            <h2 class="text-white">Ready for More Resources?</h2>
            <p class="text-xl text-primary-50 max-w-2xl mx-auto">
              Explore our curated collection of tools, apps, and downloadable checklists
              to support your language learning journey.
            </p>
            <a href="/resources" class="btn bg-white text-primary-600 hover:bg-primary-50 inline-flex">
              Browse Resources
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Tips -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-center text-gray-900 mb-12">Quick Tips for Success</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-xl shadow-md border-l-4 border-primary-600">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Start Small</h3>
              <p class="text-gray-600">
                Begin with one or two high-quality apps rather than overwhelming your child
                with too many options.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md border-l-4 border-accent-600">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Set Expectations</h3>
              <p class="text-gray-600">
                Clearly communicate when and how technology will be used for language learning
                to create healthy routines.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md border-l-4 border-primary-600">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Monitor Progress</h3>
              <p class="text-gray-600">
                Regularly check in on your child's progress and adjust tools or approaches
                as needed.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md border-l-4 border-accent-600">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Make It Fun</h3>
              <p class="text-gray-600">
                Choose engaging, game-like experiences that keep motivation high while
                still focusing on learning outcomes.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
