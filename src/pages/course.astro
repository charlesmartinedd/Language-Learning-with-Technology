---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const modules = [
  {
    number: 1,
    title: 'Understanding Language Learning Foundations',
    lessons: 5,
    duration: '45 min',
    description: 'Learn the science behind language acquisition and how technology can support natural learning processes.',
    topics: ['How children learn languages', 'The role of input and output', 'Critical periods and windows of opportunity', 'Technology as a learning tool'],
  },
  {
    number: 2,
    title: 'Evaluating Educational Technology',
    lessons: 6,
    duration: '60 min',
    description: 'Develop a framework for assessing and selecting appropriate technology tools for your child.',
    topics: ['Quality indicators for educational apps', 'Understanding learning analytics', 'Privacy and safety considerations', 'Free vs. paid resources'],
  },
  {
    number: 3,
    title: 'Creating Effective Learning Routines',
    lessons: 5,
    duration: '50 min',
    description: 'Design daily routines that integrate technology meaningfully into your child\'s language learning journey.',
    topics: ['Balancing screen time', 'Building sustainable habits', 'Parent involvement strategies', 'Tracking progress effectively'],
  },
  {
    number: 4,
    title: 'Interactive Learning Strategies',
    lessons: 7,
    duration: '70 min',
    description: 'Master techniques for maximizing engagement and learning outcomes through interactive technology use.',
    topics: ['Co-viewing and co-playing', 'Asking the right questions', 'Extending learning beyond the screen', 'Cultural and contextual awareness'],
  },
  {
    number: 5,
    title: 'Troubleshooting Common Challenges',
    lessons: 4,
    duration: '40 min',
    description: 'Address common obstacles and learn solutions for maintaining motivation and progress.',
    topics: ['Overcoming resistance', 'Managing frustration', 'Adjusting difficulty levels', 'When to seek additional support'],
  },
];

