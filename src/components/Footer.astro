---
const currentYear = new Date().getFullYear();

const footerLinks = {
  navigate: [
    { name: 'Home', href: '/' },
    { name: 'About', href: '/about' },
    { name: 'Guide', href: '/guide' },
  ],
  resources: [
    { name: 'Resources', href: '/resources' },
    { name: 'Course', href: '/course' },
    { name: 'Contact', href: '/contact' },
  ],
};
---

<footer class="bg-primary-900 text-white">
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-accent-400 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">LL</span>
          </div>
          <span class="font-display font-bold text-lg">
            Language Learning Tech
          </span>
        </div>
        <p class="text-primary-100 text-sm leading-relaxed">
          Empowering parents to support their children's language learning journey through effective use of technology.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Navigate</h3>
        <ul class="space-y-2">
          {footerLinks.navigate.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-primary-100 hover:text-white transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-primary-100 hover:text-white transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-primary-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-primary-200 text-sm">
          &copy; {currentYear} Dr. Charles Martin. All rights reserved.
        </p>
        <div class="flex items-center space-x-6">
          <a
            href="mailto:drcharlesmartinjr@alexandriasdesign.com"
            class="text-primary-200 hover:text-white transition-colors text-sm"
          >
            Contact
          </a>
          <a
            href="/privacy"
            class="text-primary-200 hover:text-white transition-colors text-sm"
          >
            Privacy Policy
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
